var flag0:bool, flag1:bool, turn:int, x:int;

initial flag0 == false and flag1 == false and turn == 0 and x == 0;

thread a:
begin
  flag0 = true;
  turn = 1;
  assume not (flag1 and turn == 1);
@ x = 8;
@  flag0 = false;
  x = 0;
end


thread b:
begin
